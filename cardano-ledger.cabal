  build-depends:       base >=4.11 && <5
                     , aeson
                     , base58-bytestring
                     , base64-bytestring-type
                     , bimap
                     , binary
                     , bytestring
                     , canonical-json
                     , cardano-binary
                     , cardano-crypto-wrapper
                     , cardano-prelude
                     , containers
                     , concurrency
                     , cryptonite
                     , Cabal
                     , deepseq
                     , directory
                     , filepath
                     , formatting
                     , iohk-monitoring
                     , memory
                     , mtl
                     , resourcet
                     , streaming
                     , streaming-binary
                     , streaming-bytestring
                     , text
                     , time
                     , vector

  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude

  ghc-options:         -Weverything
                       -fno-warn-all-missed-specialisations
                       -fno-warn-missing-import-lists
                       -fno-warn-safe
                       -fno-warn-unsafe

  if (!flag(development))
    ghc-options:         -Werror

